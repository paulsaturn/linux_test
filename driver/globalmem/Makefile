
#===============================================================================
CC := gcc

#===============================================================================
TARGET := test_bin_attr test_gmem
TARGET_OUT := $(foreach f,$(TARGET),$(TARGETS_DIR)/$f)

#===============================================================================
LDLIBS += -lpthread

#===============================================================================
all: $(TARGET_OUT)
	@make -C drv

$(TARGETS_DIR)/%:%.c
	$(CC) $< -o $@ $(LDLIBS)
	
clean:
	rm -f $(TARGET_OUT)
	make -C drv clean
	
#===============================================================================
	
